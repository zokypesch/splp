{
    "name": "splp/php-messaging",
    "description": "Kafka Request-Reply Messaging Ecosystem for PHP - A complete ecosystem for implementing Request-Reply patterns over Kafka with Command Center routing, encryption, and distributed tracing",
    "type": "library",
    "keywords": [
        "kafka",
        "request-reply",
        "messaging",
        "cassandra",
        "encryption",
        "microservices",
        "distributed-systems",
        "command-center",
        "routing",
        "tracing"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "SPLP Team",
            "email": "team@splp.dev"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "ext-openssl": "*",
        "ext-curl": "*",
        "rdkafka/rdkafka": "^6.0",
        "datastax/php-driver": "^1.6",
        "monolog/monolog": "^3.0",
        "ramsey/uuid": "^4.7",
        "symfony/console": "^6.0",
        "symfony/dependency-injection": "^6.0",
        "symfony/config": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "php-cs-fixer/shim": "^3.0",
        "mockery/mockery": "^1.5"
    },
    "autoload": {
        "psr-4": {
            "Splp\\Messaging\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Splp\\Messaging\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "cs-fixer": "php-cs-fixer fix",
        "quality": [
            "@cs-check",
            "@phpstan",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        }
    }
}
